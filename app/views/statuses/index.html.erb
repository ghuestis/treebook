<div class = "core">
	<div class="page-header">
		<h1>Feed</h1>
	</div>

	<%= link_to "Post a New Status", new_status_path, class: "btn btn-primary" %>


	<% @statuses.reverse.each do |status| %>
	<div class="status">
		<strong>Name</strong>
		<p><%= status.content %></p>
		<div class="meta">
			<%= link_to time_ago_in_words(status.created_at) + " ago", status %> | 
			<% require File.expand_path('./../../../assets/scripts/testscripts.rb', __FILE__) %>
			<%= monkey_around() %> |
			<span class="admin">
				<%= link_to "Edit", edit_status_path(status) %> | 
				<%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %>
			</span>
		</div>
	</div>
	<% end %>
</div>
